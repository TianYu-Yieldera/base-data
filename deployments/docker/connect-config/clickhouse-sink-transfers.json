{
  "name": "clickhouse-sink-transfers",
  "config": {
    "connector.class": "com.clickhouse.kafka.connect.ClickHouseSinkConnector",
    "tasks.max": "4",
    "topics": "base.erc20.transfers",
    "hostname": "clickhouse",
    "port": "8123",
    "database": "base_data",
    "username": "default",
    "password": "",
    "ssl": "false",

    "table": "raw_base_erc20_transfers",
    "insert.format": "JSONEachRow",

    "batch.size": "20000",
    "batch.timeout.ms": "5000",
    "retry.count": "3",
    "retry.delay.ms": "1000",

    "exactlyOnce": "true",
    "deduplication.window.seconds": "600",

    "key.converter": "org.apache.kafka.connect.storage.StringConverter",
    "value.converter": "io.confluent.connect.avro.AvroConverter",
    "value.converter.schema.registry.url": "http://schema-registry:8081",

    "errors.tolerance": "all",
    "errors.deadletterqueue.topic.name": "base.dlq.transfers",
    "errors.deadletterqueue.topic.replication.factor": "1",
    "errors.deadletterqueue.context.headers.enable": "true",

    "transforms": "InsertField",
    "transforms.InsertField.type": "org.apache.kafka.connect.transforms.InsertField$Value",
    "transforms.InsertField.partition.field": "kafka_partition",
    "transforms.InsertField.offset.field": "kafka_offset"
  }
}
